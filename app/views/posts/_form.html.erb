<%= form_for @post do |f| %>
  <%= f.label "Title:" %>
  <%= f.text_field :title %>
  <%= f.label "Content:" %>
  <%= f.text_area :content %>
  <%= f.collection_check_boxes :category_ids, @categories, :id, :name %>
  <%= f.fields_for :categories, post.categories.build do |categories_fields| %>
    <%= categories_fields.label :category_name %>
    <%= categories_fields.text_field :name %>
  <% end %>
  <%= f.submit %>
<% end %>
